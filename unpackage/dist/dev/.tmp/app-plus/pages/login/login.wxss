
.login{
	width: 100%;
	height: 100%;
	background:  #FFFFFF;
}
.login-phone{
	/* background: #FFFFFF; */
	width: 100%;
	height: 100rpx;
	border-bottom: 1rpx solid #CCCCCC;
	padding-left: 25rpx;
	padding-right: 25px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 30rpx;
	margin-bottom: 20rpx;
}
.login-phone:placeholder-shown{
	color: #CCCCCC;
}
.login-phone:-ms-input-placeholder{
	color: #CCCCCC;
}
.login-pass{
	width: 100%;
	height: 100rpx;
	position: relative;
	margin-bottom: 50rpx;
}
.login-pass-text{
	display: inline-block;
	background: #CCCCCC;
	width: 200rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	color: #FFFFFF;
	border-radius: 40rpx;
	position: absolute;
	right: 25rpx;
	top: 10rpx;
}
.login-btns{
	width: 700rpx;
	height: 100rpx;
	margin-left: 25rpx;
	background: #CCCCCC;
	text-align: center;
	line-height: 100rpx;
	color: #FFFFFF;
	border-radius: 50rpx;
	font-size: 36rpx;
}

